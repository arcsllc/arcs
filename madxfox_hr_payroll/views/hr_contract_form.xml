<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="hr_contract_view_form" model="ir.ui.view">
        <field name="name">hr.contract.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_payroll.hr_contract_form_inherit"/>
        <field name="arch" type="xml">
                    <xpath expr="//field[@name='ref']" position="after">
                      <field name="representation_compensation" attrs="{'invisible': [('wage_type', '=', 'hourly')]}"/>
					  <field name="responsibility_compensation" attrs="{'invisible': [('wage_type', '=', 'hourly')]}"/>
					  <field name="work_conditions_compensation" attrs="{'invisible': [('wage_type', '=', 'hourly')]}"/>
					  <field name="transportation_compensation" attrs="{'invisible': [('wage_type', '=', 'hourly')]}"/>
					  <field name="inflation_compensation" attrs="{'invisible': [('wage_type', '=', 'hourly')]}"/>
                    </xpath>
            </field>
    </record>
</odoo>
